<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th><%=link_to "Who (Actor)", actors_path %></th>
      <th><a>What</a></th>
      <th><%= link_to "Movie (Where)", movies_path %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <% if role.actor && role.movie %>
      <tr>
        <td><%= "#{role.movie.name}" %></td>
        <td><%= "#{role.actor.first role.actor.last}" %></td>
        <td><%= role.name %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', role %></td>
          <td><%= link_to 'Edit', edit_role_path(role) %></td>
          <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Role', new_role_path %>
<% end %>

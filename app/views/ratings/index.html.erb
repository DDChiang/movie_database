<h1>Listing ratings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Movie</th>
      <th>Review</th>
      <th>Stars</th>
      <th>Review present</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.user_id %></td>
        <td><%= rating.movie_id %></td>
        <td><%= rating.review %></td>
        <td><%= rating.stars %></td>
        <td><%= rating.review_present %></td>
        <td><%= link_to 'Show', rating %></td>
        <% if current_user.try(:admin?) || current_user.try(:id) == rating.user_id %>
          <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
          <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Rating? First, go choose your movie', movies_path %>
<% else %>
  <%= link_to "Sign in to add a critique to a movie!", new_user_session_path %>
<% end %>

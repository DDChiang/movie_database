<% @rating = Rating.where('movie_id' => movie.id, 'user_id' => current_user.id).first %>
<% if @rating %>
    Your review has been counted...
<% else %>
  <div id="create_rating">
    Add your review:
    <br><br>
    <%= render partial: "movies/movie_rating", locals: { movie: @movie} %>
  </div>
<% end %>


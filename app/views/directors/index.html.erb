<h1>Listing directors</h1>

<table>
  <thead>
    <tr>
      <th>Nickname/Stage Name</th>
      <th>Name</th>
    <% if current_user.try(:admin?) %>
      <th>Approved</th>
    <% end %>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.stage_name %></td>
        <td><%= director.first %> <%= director.last %></td>
      <% if current_user.try(:admin?) %>
        <td><%= director.approved %></td>
      <% end %>
        <td><%= director.birthday %></td>
        <td><%= link_to 'Show', director %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_director_path(director) %></td>
        <td><%= link_to 'Destroy', director, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Director', new_director_path %>
<% end %>
